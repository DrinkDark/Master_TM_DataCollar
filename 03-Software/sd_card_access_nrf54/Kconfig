# General configuration
config DELAY_ON_HARDWARE_POWERED_ON
    int "Delay to be sure that all threads have detected the power on hardware, in [ms]"
    default 2000

config HOT_RESET_VAL
    int "Hot Reset delault value 0xa5"
    default 165

