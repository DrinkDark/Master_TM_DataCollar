config STORAGE_MOUNT_POINT
    string "Name of the Fatfs mount point"
    default "/SD:"

config STORAGE_DISK_POINTER_NAME
    string "Fatfs disk pointer name"
    default "SD"

config STORAGE_FILE_NAME
    string "Name of the file where the audio samples are stored"
    default "rec"

config STORAGE_FILE_EXTENSION
    string "Extension of the file name"
    default "dat"

config STORAGE_LIST_FILES_ON_CARD
    bool "Will list all files and folders on SD Card when mounted"
    default n

config STORAGE_USE_SDHC_NODE_FEATURE
    bool "Try to use fatfs functionality for SD Card detection"
    default n



