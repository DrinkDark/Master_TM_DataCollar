// ---------- Define GPIOs & Hardware used ----------
&pinctrl {

	// ----- pinctrl for Monkey PCB -----
	spi20_default: spi20_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  1, 11)>,
                    <NRF_PSEL(SPIM_MOSI, 1, 12)>,
                    <NRF_PSEL(SPIM_MISO, 1, 10)>;
        };
    };

    spi20_sleep: spi20_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK,  1, 11)>,
                    <NRF_PSEL(SPIM_MOSI, 1, 12)>,
                    <NRF_PSEL(SPIM_MISO, 1, 10)>;
            low-power-enable;
        };
    };

	// ----- pinctrl for Monkey PCB -----
	i2s20_default: i2s20_default {
        group1 {
            psels = <NRF_PSEL(I2S_LRCK_M, 1, 8)>,
                    <NRF_PSEL(I2S_SCK_M, 1, 6)>,
                    //<NRF_PSEL(I2S_SDOUT, 1, 9)>,
                    <NRF_PSEL(I2S_SDIN, 1, 5)>; 
                    
        };
    };

	i2s20_sleep: i2s20_sleep {
		group1 {
            psels = <NRF_PSEL(I2S_LRCK_M, 1, 8)>,
                    <NRF_PSEL(I2S_SCK_M, 1, 6)>,
                    //<NRF_PSEL(I2S_SDOUT, 1, 9)>,
                    <NRF_PSEL(I2S_SDIN, 1, 5)>; 
			low-power-enable;
		};
	};
};

&spi20 {
    status = "okay";
    compatible = "nordic,nrf-spim";
    pinctrl-0 = <&spi20_default>;
    pinctrl-1 = <&spi20_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios = <&gpio1 13 GPIO_ACTIVE_LOW>; // P1.13 - SD_nCS
	sdhc0: sdhc@0 {
		compatible = "zephyr,sdhc-spi-slot";
		reg = <0>;
		status = "okay";
		mmc {
			compatible = "zephyr,sdmmc-disk";
			disk-name = "SD";
			status = "okay";
		};
		spi-max-frequency = <24000000>;
	};
};

